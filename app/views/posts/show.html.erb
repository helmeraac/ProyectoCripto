<% content_for :head do %>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,100,300,100italic,300italic,400italic,500,500italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">

    <!-- Template CSS Files  -->
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/js/plugins/camera/css/camera.css" rel="stylesheet">
    <link href="/js/plugins/magnific-popup/magnific-popup.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/responsive.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/images/fav-144.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/images/fav-114.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/images/fav-72.png">
    <link rel="apple-touch-icon-precomposed" href="/images/fav-57.png">
    <link rel="shortcut icon" href="/images/fav.png">
<% end %>
<%= render partial: 'layouts/front/header' %>
<!-- Main Banner Starts -->
<div class="main-banner three">
  <div class="container">
    <h2><span>Noticias</span></h2>
  </div>
</div>
<!-- Main Banner Ends -->
<!-- Breadcrumb Starts -->
<div class="breadcrumb">
  <div class="container">
    <ul class="list-unstyled list-inline">
      <li><a href="/news/1">Noticias</a></li>
      <li class="active"><%= @post.title %></li>
    </ul>
  </div>
</div>

<!-- Main Container Starts -->
<div class="container main-container">
  <!-- Nested Row Starts -->
  <div class="row">
    <!-- Mainarea Starts -->
    <div class="col-md-9 col-xs-12">
      <!-- News Post Single Starts -->
      <div class="news-post-single">
        <!-- News Post Starts -->
        <article class="news-post">
          <img src="<%= @post.header_img.url %>" alt="Blog Image" class="img-responsive img-center-lg img-center-md img-center-sm img-center-xs" style="max-height: 300px">
          <div class="inner">
            <h4><%= @post.title %></h4><!--Fill @post-title -->
            <ul class="list-unstyled list-inline post-meta">
              <li>
                <i class="fa fa-calendar"></i>
                Publicado el <%= l(@post.created_at, format: '%d de %B de %Y a las %I:%M %p')%><!--Fill @post.date -->
              </li>
              <li>
                <i class="fa fa-user"></i>
                Por <a href="#"><%= @post.admin.name %></a> <!--Fill @post.author -->
              </li>

            </ul>
            <div class="news-post-content">
              <%=raw @post.html_body %> <!--Fill @post.content -->
            </div>
          </div>
        </article>
        <!-- News Post Ends -->
      </div>
      <!-- News Post Single Ends -->
      <!-- Author Bio Starts -->
      <div class="blog-author-bio">
        <h4 class="side-heading1">Acerca del autor</h4>
        <div class="row">
          <div class="col-xs-9 text-justify">
            <h4><%=@post.admin.name%></h4>
            <%= @post.admin.bio %> <!--Fill @post.author.bio -->
          </div>
          <div class="col-xs-3 author-bio-img">
            <!--Fill @post.author.photo -->
            <img src="<%= @post.admin.photo %>" alt="Author Name" class="img-responsive img-rounded">
          </div>
        </div>
      </div>
      <!-- Author Bio Ends -->
    </div>
    <!-- Mainarea Ends -->
    <!-- Sidearea Starts -->
    <div class="col-md-3 col-xs-12">
      <!-- Categories Starts -->
      <h4 class="side-heading1 top">Categor√≠as Relacionadas</h4>
      <ul class="list-unstyled list-style-1">
        <% @post.categories.each do |category| %>
            <li><a href="/news/category/<%=category.id%>"><%= category.name %></a></li>
        <% end %>
      </ul>
      <!-- Categories Ends -->
      <!-- Tags Starts -->
      <h4 class="side-heading1">Etiquetas</h4>
      <ul class="list-unstyled list-inline list-tags">
        <% @post.tags.each do |tag| %>
            <li><a href="/news/tag/<%=tag.id%>"><%= tag.name %></a></li>
        <% end %>
      </ul>
      <!-- Tags Ends -->
    </div>
    <!-- Sidearea Ends -->
  </div>
  <!-- Nested Row Ends -->
</div>
<!-- Main Container Ends -->
<%= render partial: 'layouts/front/footer' %>
<% content_for :bottom do %>
    <!-- Template JS Files -->
    <script src="/js/jquery-1.11.3.min.js"></script>
    <script src="/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/plugins/camera/js/jquery.mobile.customized.min.js"></script>
    <script src="/js/plugins/camera/js/jquery.easing.1.3.js"></script>
    <script src="/js/plugins/camera/js/camera.min.js"></script>
    <script src="/js/plugins/shuffle/jquery.shuffle.modernizr.min.js"></script>
    <script src="/js/plugins/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="/js/plugins/datepicker/js/bootstrap-datepicker.js"></script>
    <script src="/vendors/bower_components/sweetalert2/dist/sweetalert.min.js"></script>
    <script src="/js/custom.js"></script>

    <script>

        $(document).ready(function () {

        });
    </script>

<% end %>
