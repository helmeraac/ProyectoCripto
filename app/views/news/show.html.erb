<% end %>
<%= render partial: 'layouts/front/header' %>
	<!-- Main Banner Starts -->
		<div class="main-banner three">
			<div class="container">
				<h2><span>Noticias</span></h2>
			</div>
		</div>
	<!-- Main Banner Ends -->
	<!-- Breadcrumb Starts -->
		<div class="breadcrumb">
			<div class="container">
				<ul class="list-unstyled list-inline">
					<li><a href="/">Noticias</a></li>
					<li class="active"><%= @post.title =></li> <!--Fill @post-title -->
				</ul>
			</div>
		</div>		
	<!-- Breadcrumb Ends -->
	<!-- Main Container Starts -->
		<div class="container main-container">
		<!-- Nested Row Starts -->
			<div class="row">
			<!-- Mainarea Starts -->
				<div class="col-md-9 col-xs-12">
				<!-- News Post Single Starts -->
					<div class="news-post-single">
					<!-- News Post Starts -->
						<article class="news-post">
							<img src="<%= @post.header %>" alt="Blog Image" class="img-responsive img-center-sm img-center-xs">
							<div class="inner">
								<h4><%= @post.title %></h4><!--Fill @post-title -->
								<ul class="list-unstyled list-inline post-meta">
									<li>
										<i class="fa fa-calendar"></i> 
										Posteado en <%= @post.date.strftime("%m/%d/%Y") => <!--Fill @post.date -->
									</li>
									<li>
										<i class="fa fa-user"></i> 
										Por <a href="#"><%= @post.author.name =></a> <!--Fill @post.author -->
									</li>
									<li>
										<a href="#">
											<i class="fa fa-comments-o"></i> <%= @post.comments.count %> Commentarios <!--Fill @post.comments counter -->
										</a>
									</li>
									<li>
										<i class="fa fa-tag"></i>
										<% @tags.each do |tag| %>
											<a href="#"><%= tag.name %></a>,
										<% end %> 
									</li>
								</ul>
								<div class="news-post-content">
                                    <%= @post.content %> <!--Fill @post.content -->
								</div>
							</div>
						</article>
					<!-- News Post Ends -->
					</div>
				<!-- News Post Single Ends -->
				<!-- Author Bio Starts -->
					<div class="blog-author-bio">
						<h4 class="side-heading1">Acerca del autor</h4>
						<div class="row">
							<div class="col-xs-9 text-justify">
								<%= @post.author.bio %> <!--Fill @post.author.bio -->
							</div>
							<div class="col-xs-3 author-bio-img">
                                <!--Fill @post.author.photo -->
								<img src="<%= @post.author.photo %>" alt="Author Name" class="img-responsive">
							</div>
						</div>
					</div>
				<!-- Author Bio Ends -->
				<!-- Comments Display Starts -->
					<div class="comments-area">
						<h4 class="main-heading2">
							<i class="fa fa-comments-o"></i> Comentarios (<%= @post.comments.count %>)
						</h4>
					<!-- Comment #1 Starts -->
						<div class="media">
							<a class="media-left" href="#">
								<img class="media-object" src="/images/avatar-1.png" alt="Avatar">
							</a>
							<div class="media-body">
								<h5><a href="#">Johnathon  Mark</a></h5>
								<p class="date"><a href="#">Sept 21, 2015</a></p>
								<p>
									Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut volutpat rutrum eros amet sollicitudin interdum. Suspendisse pulvinar, velit nec pharetra interdum, ante tellus ornare mi, et mollis tellus neque vitae elit. Mauris adipiscing mauris fringilla turpis interdum sed pulvinar nisi malesuada. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
								</p>
								<a href="#" class="btn btn-secondary">Reply</a>
							</div>
						</div>
					<!-- Comment #1 Ends -->					
					<!-- Comment #2 Starts -->
						<div class="media">
							<a class="media-left" href="#">
								<img class="media-object" src="/images/avatar-1.png" alt="Avatar">
							</a>
							<div class="media-body">
								<h5><a href="#">Liza Razy</a></h5>
								<p class="date"><a href="#">Aug 09, 2015</a></p>
								<p>
									Donec sed odio dui. Nulla vitae elit libero, a pharetra augue. Nullam id dolor id nibh ultricies vehicula ut id elit. Integer posuere erat a ante venenatis dapibus posuere velit aliquet.
								</p>
								<p>
									Suspendisse pulvinar, velit nec pharetra interdum, ante tellus ornare mi, et mollis tellus neque vitae elit. Mauris adipiscing mauris fringilla turpis interdum sed pulvinar nisi malesuada. 
								</p>
								<a href="#" class="btn btn-secondary">Reply</a>
							<!-- Nested Comment #2 Starts -->
								<div class="media">
									<a class="media-left" href="#">
										<img class="media-object" src="/images/avatar-1.png" alt="Avatar">
									</a>
									<div class="media-body">
										<h5><a href="#">Admin</a></h5>
										<p class="date"><a href="#">Aug 09, 2015</a></p>
										<p>
											Mauris adipiscing mauris fringilla turpis interdum sed pulvinar nisi malesuada. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
										</p>
										<a href="#" class="btn btn-secondary">Reply</a>
									</div>
								</div>
							<!-- Nested Comment #2 Ends -->
							</div>
						</div>
					<!-- Comment #2 Ends -->
					</div>
				<!-- Comments Display Ends -->				
				<!-- Comments Form Starts -->
					<div class="comment-form">
						<h4 class="main-heading2">Agrega tu comentario</h4>
						<form role="form">
							<div class="row">
								<div class="col-md-6 col-xs-12">
									<div class="form-group">
                                            <input type="text" class="form-control no-border-radius" placeholder="Full Name *" value="asdasdasd  123123" required="" readonly="">
									</div>
								</div>
								<div class="col-md-6 col-xs-12">
									<div class="form-group">
                                            <input type="text" class="form-control no-border-radius" placeholder="Email Address *" value="davidcamiloneo@gmail.com" required="" readonly="">
									</div>
								</div>
								<div class="col-xs-12">
									<div class="form-group">
										<textarea class="form-control no-border-radius" rows="5" placeholder="Mensaje"></textarea>
									</div>
								</div>
								<div class="col-xs-12">
									<input type="submit" class="btn btn-secondary text-uppercase" value="Enviar">
								</div>
							</div>
						</form>
					</div>
				<!-- Comments Form Ends -->
				</div>
			<!-- Mainarea Ends -->
			<!-- Sidearea Starts -->
				<div class="col-md-3 col-xs-12">
					<!-- Categories Starts -->
					<h4 class="side-heading1 top">Categories</h4>
					<ul class="list-unstyled list-style-1">
						<% @categories.each do |category| %>
							<li><a href="#"><%= category.name %></a></li>
						<% end %> 
					</ul>
					<!-- Categories Ends -->
					<!-- Tags Starts -->
					<h4 class="side-heading1">Tags</h4>
					<ul class="list-unstyled list-inline list-tags">
						<% @tags.each do |tag| %>
							<li><a href="#"><%= tag.name %></a></li>
						<% end %> 
					</ul>
					<!-- Tags Ends -->
				</div>
			<!-- Sidearea Ends -->
			</div>
		<!-- Nested Row Ends -->
		</div>
	<!-- Main Container Ends -->
<%= render partial: 'layouts/front/footer' %>
<% content_for :bottom do %>
