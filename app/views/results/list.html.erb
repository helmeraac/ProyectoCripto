<script src="/js/app.min.js"></script>

<script type="text/javascript">
    $(document).ready(function() {
        if($('#error_notice').val()){
            swal({ html:true, title:'Error!', text:$('#error_notice').val(), type: "error"});
        }
        if($('#success_notice').val()){
            swal("", $('#success_notice').val(), "success");
        }  
        $('#data-table-basic').DataTable({
"order": [[ 0, "desc" ]]

        });
    } );

    //Warning Message

    function deleteResult(id){
            swal({
                     title: "EstÃ¡ seguro?",
          text: "No se podran recuperar los datos del resultado en un futuro",
          type: "warning",
          showCancelButton: true,
          confirmButtonColor: "#DD6B55",
          confirmButtonText: "Confirmar",
          closeOnConfirm: false
        },
                     function(){
                        $.ajax({
                            url: '/results/' + id,
                            type: 'DELETE',
                            success: function(result) {
                                swal({
                                    title: "", 
                                    text: result.success, 
                                    type: "success"
                                },function(){
                                    location.reload();
                                });
                            },
                            error: function(data){
                            swal("", data.responseJSON.message, "error")
                        }
                        });
                    });
    
    }
</script>
<script type="text/javascript">


    function cancelEdit(){
        $('#form-user').hide('slow');
    }



</script>
<% end %>