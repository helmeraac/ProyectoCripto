<!DOCTYPE html>
<html>
<head>
  <title>Citopat</title>

  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>

  <%= yield :head %>
</head>

<body>
  <% if notice %>
  <p class="alert alert-success" style="margin: 0;"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert alert-danger" style = "margin: 0;" ><%= alert %></p>
  <% end %>
  <%= yield %>
  <%= yield :bottom %>
</body>
</html>
